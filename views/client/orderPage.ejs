<%- include('header') %>
<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

<link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-solid-straight/css/uicons-solid-straight.css'>

<div class="mt-28 p-3 overflow-hidden">
  <% if (msg) { %>
  <div id="animate" class="text-center text-2xl  flex-col flex items-center   h-screen text-green-500 w-screen font-semibold mt-5 mb-5 transition-all ">
    <lottie-player src="/images/animation_lnbwm9ui.json" background="transparent" speed="1" class="w-96 absolute h-96 " autoplay></lottie-player>

    <p id="msg" class="transition-opacity ">
      <%=msg %>
    </p>
  </div>
  <% } %>
  <div class="w-full overflow-auto">
    <div class="border-b-2 mt-5 mb-5  p-4">
      <div class="md:flex justify-between">
        <h2 class="sm:text-2xl text-xl mb-2 font-bold ">ORDER #<%= order._id %>
        </h2>
        <p class="font-medium">Date:<%let options={ weekday: 'short' , year: 'numeric' ,
                                    month: 'short' , day: 'numeric' }; %>
          <%= order.createdAt.toLocaleDateString("en-US", options) %>
        </p>
      </div>
      <div>
        <p>
          Order Status : <% if (order.status=='delivered' ) { %>
          <span class="text-sm text-green-600 font-light px-6 py-4 whitespace-nowrap">DELIVERED</span>
          <% }else if (order.status=='cancelled' ) { %>
          <span class="text-sm text-red-700 font-light px-6 py-4 whitespace-nowrap">CANCELLED</span>

          <% }else if (order.status=='pending' ){ %>
          <span class="text-sm text-yellow-600 font-light px-6 py-4 whitespace-nowrap">PENDING</span>

          <% } else if (order.status=='confirmed' ){ %>
          <span class="text-sm text-orange-600 font-light px-6 py-4 whitespace-nowrap">CONFIRMED</span>

          <% } %>
        </p>
        <p>
          Payment Mode : <%= order.paymentMode %>
        </p>
        <p>
          Payment ID : <%= order.paymentId %>
        </p>
        <div class="flex justify-between ">
          <p class="flex">
            Shipping Address : &nbsp <span>
              <%= order.shippingAddress.addressLine1 %> <br>
              <%= order.shippingAddress.city %> <br>
              <%= order.shippingAddress.pin %> <br>
            </span>
          </p>
          <div>

            <a href="/<%= order.invoice.substring(31) %>" target="_blank"><i class="fa-regular fas fa-xl fa-file-arrow-down"></i> DOWNLOAD INVOICE</a>

            <p class="text-xl font-semibold">
              <% if (order.status!='cancelled' && order.status!='delivered' ) { %>
              <button data-oid="<%= order._id %>" id="btn" data-modal="openModal" class="modal text-red-700  px-6 py-4 whitespace-nowrap">CANCEL
                ORDER
              </button>
              <% } else{%>
              <button data-oid="<%= order._id %>" id="btn" class="modal text-red-700  px-6 py-4 whitespace-nowrap">
              </button>
              <% } %>
            </p>

          </div>
        </div>
      </div>
    </div>
    <% let subtotal=0 %>
    <div class="mt-8 space-y-3 rounded-lg border bg-white px-2 py-4 sm:px-6">
      <% products.forEach((product,i)=> { %>
      <div class="flex  rounded-lg bg-white ">
        <img class="m-2 h-24 w-28 rounded-md border object-cover object-center" src="<%=product.images[0]%>" alt="" />
        <div class="flex w-full flex-col px-4 py-4">
          <span class="font-semibold">
            <%=product.name %>
          </span>
          <span class="float-right text-gray-400">
            quantity : <%=order.items[i].quantity %>
          </span>
          <p class="text-lg font-semibold">Total : ₹
            <%=order.items[i].price %>
          </p>
        </div>
      </div>
      <% subtotal=subtotal+(order.items[i].price*order.items[i].quantity) %>
      <% }); %>
    </div>
    <div class="border-t-2 mt-5 mb-5  p-4">
      <p class="text-xl font-bold">
        SUB TOTAL : <%= subtotal %>
      </p>
      <p class="text-xl font-bold">
        Coupon Discount : <%= order.offer %>
      </p>
      <p class="text-xl font-bold">
        GRAND TOTAL : ₹<%= order.total %>
      </p>
    </div>

  </div>

  <!-- CONFIRMATION moDAL -->

  <div id="confirmation" class="hidden fixed z-10 inset-0 overflow-y-auto">
    <div class="flex items-center justify-center h-screen pt-4 px-4 pb-20 text-center">
      <div class="fixed inset-0 transition-opacity">
        <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
      </div>

      <span class="hidden sm:inline-block sm:align-middle sm:h-screen"></span>&#8203;

      <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
        <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
          <h3 class="text-xl leading-6 font-medium text-gray-900">
            Confirmation
          </h3>
          <div class="mt-2">
            <p class="text-sm text-gray-500">
              Do you want Cancell this order?
            </p>
          </div>
        </div>
        <div class="bg-white px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
          <button id="allow" type="button" class="modal w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-500 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm">
            YES
          </button>
          <button id="deny" type="button" class="modal mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-300 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm">
            NO
          </button>
        </div>
      </div>
    </div>
  </div>
</div>


</div>

<script>
  const modal = document.getElementById("confirmation");
  const modalbtn = document.querySelectorAll('.modal')
  const oId = document.getElementById('btn').dataset.oid
  modalbtn.forEach(btn => {
    btn.addEventListener('click', (e) => {
      if (e.target.id === "btn") {
        modal.classList.remove("hidden");
      } else if (e.target.id === "allow") {
        const status = "cancelled"
        fetch('/cancelOrder', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              status: status,
              oId: oId
            }),
          }).then(response => {

            return window.location.reload()
          })
          .catch((error) => {
            console.error('Error:', error);
          });
      } else if (e.target.id === "deny") {
        modal.classList.add("hidden");
      }

    })
  })
</script>
