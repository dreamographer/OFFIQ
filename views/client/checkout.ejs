          <span class="font-semibold">
            <%=product.name %>
          </span>
          <span class="float-right text-gray-400">
            <%=cart[i].quantity %> Unit
          </span>
          <p class="text-lg font-bold">₹<%=product.price*cart[i].quantity %>
          </p>
        </div>
      </div>
      <% }); %>
